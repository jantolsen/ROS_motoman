<!-- 
  Wrapper launch file for the Fanuc specific motion streaming interface node.
-->
<launch>
	<!-- IP of robot (or PC running simulation) -->
	<arg name="robot_ip" doc="IP of controller" />

	<!-- Load the byte-swapping version of robot_state if required -->
	<arg name="use_bswap" doc="If true, robot driver will byte-swap all incoming and outgoing data" />

	<!-- put them on the parameter server -->
	<param name="robot_ip_address" type="str" value="$(arg robot_ip)" />

  	<!-- Parallell-Linkage 
		Correct for J2/J3 parallel linkage -->
	<arg name="J23_coupled" default="false"  doc="If true, compensate for J2-J3 parallel linkage"/>
	<param name="J23_coupled" type="bool" value="$(arg J23_coupled)"/>

	<arg name="debug" default="false"/>
	<arg name="debug_string"      value="xterm -e gdb -ex run -args" if="$(arg debug)"/>
    <arg name="debug_string"      value="" unless="$(arg debug)"/>

	<!-- load the correct version of the motion streaming node -->
	<!-- <node if="$(arg use_bswap)" name="motion_streaming_interface"
                pkg="motoman_driver" type="motion_streaming_interface_bswap" respawn="true"/>
	<node unless="$(arg use_bswap)" name="motion_streaming_interface"
                pkg="motoman_driver" type="motion_streaming_interface" respawn="true"/> -->
	
	<node if="$(arg use_bswap)" name="motion_streaming_interface"
                pkg="motoman_driver" type="motion_streaming_interface_bswap" respawn="true" launch-prefix="$(arg debug_string)"/>
	<node unless="$(arg use_bswap)" name="motion_streaming_interface"
                pkg="motoman_driver" type="motion_streaming_interface" respawn="true" launch-prefix="$(arg debug_string)"/>
</launch>
